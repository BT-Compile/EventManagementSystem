@page
@model EventManagementSystem.Pages.Events.AdminEventModel
@{
}

<br />
<div class="wrapper">
    <h2 class="font">All Events</h2>
    <br />
    <form method="post" asp-page="Events/AdminEvent">
        <input type="text" class="searchbar" asp-for="InputString" placeholder="Search Events" required pattern=".*\S+.*" title="Input must contain at least one non-whitespace character" />
        &emsp;<button type="submit" class="btn rndbtn btn-light">Search</button>
    </form>
    <br />
    <div class="shdwbox">
        <div class="table-responsive card">
            <table class="table table-responsive table-hover">
                <thead>
                    <tr>
                        <th>Event Name:</th>
                        <th>Start Date:</th>
                        <th>End Date:</th>
                        <th>Event Type:</th>
                        <th>Status:</th>
                        <th>Event Details:</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var event1 in Model.Events)
                        {
                            <tr class="table-secondary">
                                <td>@event1.EventName</td>
                                <td>@event1.StartDate.ToString("MM/dd/yyyy")</td>
                                <td>@event1.EndDate.ToString("MM/dd/yyyy")</td>
                                <td>@event1.EventType</td>
                                <td>@event1.Status</td>
                                <td>
                                    <a asp-page="AdminViewEvent" class="btn rndbtn btn-light" asp-route-eventid="@event1.EventID">View|Edit</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <br />
    <a asp-page="/Admin/Index" class="btn logbtn btn-light">Back</a> <a asp-page="NewEvent" class="btn logbtn btn-light">Create New Event</a>
</div>