@page
@model EventManagementSystem.Pages.Attendee.TeamSignUp.LeaveTeamModel
@{
}

<form asp-page="LeaveTeam">
    <div class="text-center">
        <h1>
            Are you sure you want to leave this team?<br />
            <br />
            Name = @Model.UserToLeave.FirstName @Model.UserToLeave.LastName
            <br />
            Team = @Model.TeamToLeave.Name
        </h1>
        <button class="btn btn-success" type="submit">I am sure</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

