@page
@model EventManagementSystem.Pages.Attendee.AttendeeSignUp.IndexModel
@{
}

<div class="wrapper">
    <br />
    <h2 class="font">Available Events:</h2>
    <br />
    <table class="table table-responsive table-hover">
        <thead>
            <tr>
                <th>Event Name:</th>
                <th>Event Description:</th>
                <th>Start Date:</th>
                <th>End Date:</th>
                <th>Registration Deadline:</th>
                <th>Location:</th>
                <th>Sign Up:</th>
            </tr>
        </thead>
        <tbody class="table-secondary">
            @{
                foreach (var record in Model.Events)
                {
                    <tr>
                        <td><b>@record.EventName</b></td>
                        <td>@record.EventDescription</td>
                        <td>@record.StartDate</td> 
                        <td>@record.EndDate</td>
                        <td>@record.RegistrationDeadline</td>
                        <td>@record.SpaceName</td>
                        <td>
                            <a asp-page="ActivitySignUp" class="btn rndbtn btn-light" asp-route-eventid="@record.EventID">Join</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <br />

    <a asp-page="../Index" class="btn rndbtn btn-secondary">Cancel</a>
</div>