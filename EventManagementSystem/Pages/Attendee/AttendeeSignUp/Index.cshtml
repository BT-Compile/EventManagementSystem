@page
@model EventManagementSystem.Pages.Attendee.AttendeeSignUp.IndexModel
@{
}

<h2>Available Activities</h2>
<table class="table table-bordered table-responsive table-hover">
    <thead>
        <tr>
            <th>Event Name:</th>
            <th>Event Description:</th>

            <th>Date:</th>
            <th>Time:</th>
            <th>Building:</th>
            <th>Room Number:</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var record in Model.Events)
            {
                <tr class="table-secondary">
                    <td>@record.EventName</td>
                    <td>@record.EventDescription</td>
                    <td>@record.StartDate</td>
                    <td>@record.EndDate</td>
                    <td>@record.RegistrationDeadline</td>
                    <td>@record.BuildingName</td>
                    <td>
                        <a asp-page="Confirmation" class="btn btn-outline-success" asp-route-activityid="@record.ActivityID">Sign up</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<br />

<a asp-page="../Index" class="btn btn-secondary">Cancel</a>

