@page
@model EventManagementSystem.Pages.Attendee.AttendeeSignUp.ViewEventModel
@{
}

<div class="wrapper">
    @{
        foreach (var e in Model.Events)
        {
            <br />
            <br />
            <p class="font">@e.StartDate.ToString("MM/dd/yyyy") - @e.EndDate.ToString("MM/dd/yyyy")</p>
            <p class="font">@e.SpaceName</p>
            <br />
            <h1 class="font centertxt">@e.EventName</h1>
            <br />
            <div class="centertxt">
                <a asp-page="/Attendee/AttendeeSignUp/ActivitySignUp" class="btn widebutton btn-light" asp-route-eventid="@e.EventID">Register</a>
            </div>
            <br />
            <hr />
            <br />
            <br />
            <div class="shdwbox">
                <p class="centertxt">@e.EventDescription</p>
            </div>
            <br />
            <hr />
            <br />
            <h3 class="font centertxt">Subevents</h3>
            <br />
            foreach (var s in Model.Subevents)
            {
                    <div class="shdwbox subsubcontainer">
                        <p class="font centertxt">@s.EventName</p>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn widebutton-flex btn-light" data-bs-toggle="modal" data-bs-target=@("#ViewDetails" + s.EventID)>
                            View Details
                        </button>  
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id=@("ViewDetails" + s.EventID) tabindex="-1" aria-labelledby="ViewDetailsLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="purpletxt font" id="ViewDetailsLabel">Event Details</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="wrapper purpletxt font">
                                    <h3>@s.EventName</h3>
                                    Date: @s.StartDate.ToString("MM/dd/yyyy") |
                                    Time: @s.StartDate.ToString("HH:mm")
                                    <br />
                                    @s.RegistrationDeadline.ToString("MM/dd/yyyy")
                                    <br />
                                    <br />
                                    @s.ParentSpaceName @s.SpaceName
                                    <br />
                                    @s.SpaceAddress
                                    <br />
                                    <br />
                                    @s.EventDescription
                                    <br />
                                    <br />
                                </div>
                            </div>
                        </div>
                    </div>
            }
            <br />
        }
    }
</div>
