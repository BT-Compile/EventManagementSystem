@page
@model EventManagementSystem.Pages.Attendee.AttendeeSignUp.Cancel.CancelMainModel
@{
}

<div class="wrapper">
    <br />
    <h2 class="font">Select Event or Subevents to Cancel Registration For:</h2>
    <br />

    <table class="table table-responsive table-hover">
        <thead>
            <tr>
                <th>Event Name:</th>
                <th>Start Date:</th>
                <th>End Date:</th>
                <th>Location:</th>
                <th>Cancel Registration:</th>
            </tr>
        </thead>
        <form method="post" class="table-secondary">
            @{
                <tr>
                    <td>
                        <input type="hidden" name="EventID" value="@Model.ParentEvent.EventID" />
                    </td>
                    <td><b>@Model.ParentEvent.EventName</b></td>
                    <td>@Model.ParentEvent.StartDate</td>
                    <td>@Model.ParentEvent.EndDate</td>
                    <td>@Model.ParentEvent.SpaceName</td>
                    <td>
                        <input name="Checked" type="checkbox" value="@Model.ParentEvent.EventID" />
                    </td>
                </tr>
            }
        <input type="submit" value="Cancel Registration" class="btn rndbtn btn-warning" />
        </form>
    </table>

    <table class="table table-responsive table-hover">
        <thead>
            <tr>
                <th>Event Name:</th>
                <th>Event Description:</th>
                <th>Start Date:</th>
                <th>End Date:</th>
                <th>Registration Deadline:</th>
                <th>Location:</th>
                <th>Cancel Registration:</th>
            </tr>
        </thead>
        <form method="post" class="table-secondary">
            @{
                foreach (var record in Model.Events)
                {
                <tr>
                    <td>
                        <input type="hidden" name="EventID" value="@record.EventID" />
                    </td>
                    <td><b>@record.EventName</b></td>
                    <td>@record.EventDescription</td>
                    <td>@record.StartDate</td>
                    <td>@record.EndDate</td>
                    <td>@record.RegistrationDeadline</td>
                    <td>@record.SpaceName</td>
                    <td>
                        <input name="Checked" type="checkbox" value="@record.EventID" />
                    </td>
                </tr>
                }
            }
        <input type="submit" value="Cancel Registration" class="btn rndbtn btn-warning" />
        </form>
    </table>

    <br />

    <a asp-page="../Index" class="btn rndbtn btn-secondary">Cancel</a>
    <br />
    <a asp-page="AttendeeSignUp/Cancel" class="btn rndbtn btn-warning" asp-route-eventid="@Model.ParentEvent.EventID">Cancel Registration</a>
</div>