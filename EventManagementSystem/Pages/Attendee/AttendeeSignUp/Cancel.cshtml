@page "{EventID}"
@model EventManagementSystem.Pages.Attendee.AttendeeSignUp.CancelModel
@{
    ViewData["Title"] = "Cancel Event Confirmation";
}

<form asp-page="Cancel">
    <div class="text-center">
        <h1>
            Are you sure you want to cancel your attendance for this activity?<br />
            <br />
            Name = @Model.UserToCancel.FirstName @Model.UserToCancel.LastName
            <br />
            Event = @Model.EventToCancel.EventName
        </h1>
        <button class="btn btn-success" type="submit">I am sure</button>
        <a asp-page="../Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
