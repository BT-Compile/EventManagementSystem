@page
@model EventManagementSystem.Pages.Rooms.NewRoomModel
@{
    ViewData["Title"] = "New Space";
}

<div class="wrapper">
    <br />
    <div class="whitebox purpletxt">
        <h2 class="font centertxt">Enter New Space Data</h2>
        <br />
        <hr />
        <br />
        <div class="newlogbox">
            <form asp-page="NewSpace">
                <input type="hidden" asp-for="@Model.SpaceToCreate.SpaceID" />
                <label asp-for="@Model.SpaceToCreate.Name">- Space Name -</label>
                <input type="text" class="newlogfield" asp-for="@Model.SpaceToCreate.Name" id="RoomNumber" required />
                <br />
                <label asp-for="@Model.SpaceToCreate.Address">- Address -</label>
                <input type="text" class="newlogfield" asp-for="@Model.SpaceToCreate.Address" id="Address" required />
                <br />
                <label asp-for="@Model.SpaceToCreate.Capacity">- Capacity -</label>
                <input type="text" class="newlogfield" asp-for="@Model.SpaceToCreate.Capacity" id="Capacity" required />
                <br />
                <label asp-for="@Model.SpaceToCreate.ParentSpaceID">- Parent Space Name -</label>
                <select asp-for="@Model.SpaceToCreate.ParentSpaceID" class="newlogfield" asp-items="Model.ParentSpaces" >
                    <option value=""></option>
                </select>
                <br />
                <button type="button" onclick="populateForm()" class="btn rndbtn2 btn-dark">Populate</button>
                <button type="button" onclick="clearForm()" class="btn rndbtn2 btn-dark">Clear</button>
                <br />
                <input type="submit" value="Submit" class="btn rndbtn2 btn-dark" asp-page="NewRoom" />
                <a asp-page="AdminRoom" class="btn rndbtn2 btn-dark">Cancel</a>
            </form>
        </div>
    </div>
</div>

<script>
    // links to the Populate button, which populates all fields but DOES NOT send a post request
    function populateForm() {
        document.getElementById("RoomNumber").value = "110";
        document.getElementById("Capacity").value = "31";
        document.getElementById("BuildingID").value = "1";
    }

    function clearForm() {
        document.getElementById("RoomNumber").value = "";
        document.getElementById("Capacity").value = "";
        document.getElementById("BuildingID").value = "";
    }
</script>
