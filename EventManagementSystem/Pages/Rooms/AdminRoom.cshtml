@page
@model EventManagementSystem.Pages.Rooms.AdminRoomModel
@{
}

<!-- This code was designed and implemented by Steven Roenker and Devin Vicchio -->

<h2>All Rooms</h2>
<table class="table table-bordered table-responsive table-hover">
    <thead>
        <tr>
            <th>Room Name:</th>
            <th>Room Description:</th>
            <th>Max Capacity:</th>
            <th>ActivityID:</th>
            <th>Active?</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var room in Model.Rooms)
            {
                if (room.IsActive != true)
                {
                    <tr class="table-secondary">
                        <td>@room.RoomName</td>
                        <td>@room.RoomDescription</td>
                        <td>@room.MaxCapacity</td>
                        <td>@room.IsActive</td>
                        <td>
                            <a asp-page="EditRoom" class="btn btn-outline-success" asp-route-roomid="@room.RoomID">Edit</a>
                        </td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>@room.RoomName</td>
                        <td>@room.RoomDescription</td>
                        <td>@room.MaxCapacity</td>
                        <td>@room.IsActive</td>
                        <td>
                            <a asp-page="EditRoom" class="btn btn-outline-success" asp-route-roomid="@room.RoomID">Edit</a>
                        </td>
                        <td>
                            <a asp-page="DeleteRoom" class="btn btn-warning" asp-route-roomid="@room.RoomID">Deactivate</a>
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>

<br />

<a asp-page="NewRoom" class="btn btn-light">Create New Room</a>
