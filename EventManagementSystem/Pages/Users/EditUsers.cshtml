@page "{UserID}"
@model EventManagementSystem.Pages.Users.EditUsersModel
@{
    ViewData["Title"] = "Edit User";
}

<!-- This code was designed and implemented by Steven Roenker and Devin Vicchio -->

<form asp-page="EditUsers">
    <input type="hidden" asp-for="@Model.UserToUpdate.UserID" />
    <label asp-for="@Model.UserToUpdate.FirstName"></label>
    <input type="text" asp-for="@Model.UserToUpdate.FirstName" required />
    <br />
    <label asp-for="@Model.UserToUpdate.LastName"></label>
    <input type="text" asp-for="@Model.UserToUpdate.LastName" required />
    <br />
    <label asp-for="@Model.UserToUpdate.Username"></label>
    <input type="text" asp-for="@Model.UserToUpdate.Username" required />
    <br />
    <label asp-for="@Model.UserToUpdate.UserPassword"></label>
    <input type="text" asp-for="@Model.UserToUpdate.UserPassword" />
    <br />
    <label asp-for="@Model.UserToUpdate.Email"></label>
    <input type="text" asp-for="@Model.UserToUpdate.Email" />
    <br />
    <label asp-for="@Model.UserToUpdate.PhoneNumber"></label>
    <input type="text" asp-for="@Model.UserToUpdate.PhoneNumber" />
    <br />
    <label asp-for="@Model.UserToUpdate.IsAttendee"></label>
    <input type="text" asp-for="@Model.UserToUpdate.IsAttendee" required />
    <br />
    <label asp-for="@Model.UserToUpdate.IsPresenter"></label>
    <input type="text" asp-for="@Model.UserToUpdate.IsPresenter" required />
    <br />
    <label asp-for="@Model.UserToUpdate.IsAdmin"></label>
    <input type="text" asp-for="@Model.UserToUpdate.IsAdmin" required />
    <br /><br />
    <input type="submit" class="btn btn-success" asp-page="EditUsers" />
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    <br /><br />
    <p class="text-warning">
        NOTE: The "Password" field must be left blank if no password change is desired. Otherwise, enter a password, and it will be encrypted.
    </p>
</form>

