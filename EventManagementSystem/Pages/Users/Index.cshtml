@page
@model EventManagementSystem.Pages.Users.IndexModel
@{
}

<h2>All Users</h2>
<table class="table table-bordered table-responsive table-hover">
<thead>
    <tr>
        <th>First Name:</th>
        <th>Last Name:</th>
        <th>Email:</th>
        <th>Phone Number:</th>
        <th>Username:</th>
        <th>User Password:</th>
        <th>Allergies:</th>
        <th>Active?</th>
    </tr>
</thead>
<tbody>
        @{
            foreach (var user in Model.Users)
            {
                if (user.IsActive != true)
                {
                    <tr class="table-secondary">
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.Username</td>
                        <td>
                            <a asp-page="ViewPassword" class="btn btn-outline-secondary" asp-route-userid="@user.UserID">View</a>
                        </td>
                        <td>@user.AllergyNote</td>
                        <td>@user.IsActive</td>
                        <td>
                            <a asp-page="EditUsers" class="btn btn-outline-success" asp-route-userid="@user.UserID">Edit</a>
                        </td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.Username</td>
                        <td>
                            <a asp-page="ViewPassword" class="btn btn-outline-light" asp-route-userid="@user.UserID">View</a>
                        </td>
                        <td>@user.IsActive</td>
                        <td>
                            <a asp-page="EditUsers" class="btn btn-outline-success" asp-route-userid="@user.UserID">Edit</a>
                        </td>
                        <td>
                            <a asp-page="DeleteUser" class="btn btn-warning" asp-route-userid="@user.UserID">Deactivate</a>
                        </td>
                    </tr>
                }
            }
        }
</tbody>
</table>

<br />

<a asp-page="NewUser" class="btn btn-light">Create New User</a>
