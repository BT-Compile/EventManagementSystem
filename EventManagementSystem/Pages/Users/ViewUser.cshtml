@page "{UserID}"
@model EventManagementSystem.Pages.Users.ViewUserModel
@{
    ViewData["Title"] = "View User";
}

<div class="wrapper">
    <br />
    <h2 class="font centertxt"></h2>
    <br />

    
    <table class="table table-responsive table-hover">
        <thead>
            <tr>
                <th>First Name:</th>
                <th>Last Name:</th>
                <th>Email:</th>
                <th>Phone Number:</th>
                <th>Username:</th>
                <th>Accomodations:</th>
                <th>Event Names:</th>
            </tr>
        </thead>
        <tbody class="table-secondary">
            @{
                foreach (var data in Model.UserData)
                {
                    <tr>
                        <td>@data.FirstName</td>
                        <td>@data.LastName</td>
                        <td>@data.Email</td>
                        <td>@data.PhoneNumber</td>
                        <td>@data.Username</td>
                        <td>@data.Accomodation</td>
                        <td>@data.EventName</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>