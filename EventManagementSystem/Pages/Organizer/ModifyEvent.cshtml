@page
@model EventManagementSystem.Pages.Organizer.ModifyEventModel
@{
}

<div class="wrapper">
    <br />
    <div class="whitebox purpletxt">
        <h2 class="font centertxt">Edit Event Form</h2>
        <br />
        <hr />
        <br />
        <br />
        <div class="newlogbox">
            <form asp-page="ModifyEvent">
                <input type="hidden" asp-for="@Model.EventToCreate.EventID" />
                <label asp-for="@Model.EventToCreate.EventName">- Event Name -</label>
                <input type="text" asp-for="@Model.EventToCreate.EventName" id="EventName" class="newlogfield" required />
                <br />
                <label asp-for="@Model.EventToCreate.EventDescription">- Event Description -</label>
                <input type="text" asp-for="@Model.EventToCreate.EventDescription" id="EventDescription" class="newlogfield" required />
                <br />
                <label asp-for="@Model.EventToCreate.StartDate">- Start Date -</label>
                <input type="text" asp-for="@Model.EventToCreate.StartDate" id="StartDate" class="newlogfield" required />
                <br />
                <label asp-for="@Model.EventToCreate.EndDate">- End Date -</label>
                <input type="text" asp-for="@Model.EventToCreate.EndDate" id="EndDate" class="newlogfield" required />
                <br />
                <label asp-for="@Model.EventToCreate.RegistrationDeadline">- Registration Deadline -</label>
                <input type="text" asp-for="@Model.EventToCreate.RegistrationDeadline" id="RegistrationDeadline" class="newlogfield" required />
                <br />
                <label asp-for="@Model.EventToCreate.Capacity">- Capacity -</label>
                <input type="text" asp-for="@Model.EventToCreate.Capacity" id="Capacity" class="newlogfield" required />
                <br />
                <label asp-for="@Model.EventToCreate.EventType">-  Event Type -</label>
                <input type="text" asp-for="@Model.EventToCreate.EventType" id="EventType" class="newlogfield" required />
                <br />
                <label asp-for="@Model.SpaceToCreate.Name">- Location Name -</label>
                <input type="text" asp-for="@Model.SpaceToCreate.Name" id="SpaceName" class="newlogfield" required />
                <br />
                <label asp-for="@Model.SpaceToCreate.Address">- Location Address -</label>
                <input type="text" asp-for="@Model.SpaceToCreate.Address" id="SpaceAddress" class="newlogfield" required />
                <br />
                <label asp-for="@Model.SpaceToCreate.Capacity">- Location Capacity -</label>
                <input type="text" asp-for="@Model.SpaceToCreate.Capacity" id="SpaceCapacity" class="newlogfield" required />
                <br />
                <label asp-for="@Model.LocationToCreate.City">- City -</label>
                <input type="text" asp-for="@Model.LocationToCreate.City" id="City" class="newlogfield" required />
                <br />
                <label asp-for="@Model.LocationToCreate.State">- State -</label>
                <input type="text" asp-for="@Model.LocationToCreate.State" id="State" class="newlogfield" required />
                <br /><br />
                <button type="button" class="btn rndbtn btn-dark" onclick="clearForm()">Clear</button>
                <input value="Submit" type="submit" class="btn rndbtn btn-dark" id="textfield" asp-page="Organizer/Index" />
                <a asp-page="/Organizer/EditEvent" asp-route-eventid="@Model.RouteID" class="btn rndbtn btn-dark" id="textfield">Cancel</a>
            </form>
        </div>
    </div>
</div>