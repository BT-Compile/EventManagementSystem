@page
@model EventManagementSystem.Pages.Organizer.ViewEventModel
@{
}

<div class="wrapper">
    @{
        foreach (var e in Model.Events)
        {
            <br />
            <p class="font">@e.StartDate.ToString("MM/dd/yyyy") - @e.EndDate.ToString("MM/dd/yyyy")</p>
            <p class="font">@e.SpaceName</p>
            <br />
            <h2 class="font">@e.EventName</h2>
            <br />
            <a asp-page="/Organizer/EditEvent" class=" btn rndbtn btn-light" asp-route-eventid="@e.EventID">Edit</a>
            <a asp-page="/Organizer/ParticipantList" class=" btn rndbtn btn-light" asp-route-eventid="@e.EventID">View Participants</a>
            <br />
            <br />
            <p>@e.EventDescription</p>
            <br />


            <h3 class="font">Subevents</h3>

            <hr />

            foreach (var s in Model.Subevents)
            {
                //If we can set the time and date small like in the figma this will cover the agenda/schedule requirement
                <p class="font"><small>@s.StartDate.ToString("MM/dd")</small> @s.EventName
        
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target=@("#ViewDetails" + s.EventID)>
                    View Details
                </button>

                <!-- Modal -->
                <div class="modal fade" id=@("ViewDetails" + s.EventID) tabindex="-1" aria-labelledby="ViewDetailsLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="purpletxt font" id="ViewDetailsLabel">Event Details</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                                <div class="wrapper purpletxt font">
                                    <h3>@s.EventName</h3>
                                    Date: @s.StartDate.ToString("MM/dd/yyyy") |
                                    Time: @s.StartDate.ToString("HH:mm")
                                <br/>
                                    @s.RegistrationDeadline.ToString("MM/dd/yyyy")
                                <br/>
                                <br/>
                                    @s.ParentSpaceName @s.SpaceName
                                <br/>
                                @s.SpaceAddress
                                <br />
                                <br />
                                @s.EventDescription
                                <br/>
                                <br/>
                                
                            </div>
                        </div>
                    </div>
                </div>
                </p>
            }
            <br />
        }
    }
    <a asp-page="/Organizer/Index" class="btn rndbtn btn-light">Return</a>
</div>