@page
@model EventManagementSystem.Pages.Organizer.AddSubeventModel
@{
}

<div class="wrapper">
    <br />
    <div class="whitebox purpletxt">
        <h2 class="font centertxt">Subevent Creation Form</h2>
        <br />
        <hr />
        <br />
        <br />
        <div class="newlogbox">
            <form asp-page="NewUser">
                <div class="row">
                    <div class="col-md-6">
                        <input type="hidden" asp-for="@Model.SubeventToCreate.EventID" />
                        <label asp-for="@Model.SubeventToCreate.EventName">- Event Name -</label>
                        <input type="text" asp-for="@Model.SubeventToCreate.EventName" id="EventName" class="newlogfield" required />
                        <br />
                        <label asp-for="@Model.SubeventToCreate.EventDescription">- Event Description -</label>
                        <input type="text" asp-for="@Model.SubeventToCreate.EventDescription" id="EventDescription" class="newlogfield" required />
                        <br />
                        <label asp-for="@Model.SubeventToCreate.StartDate">- Start Date -</label>
                        <input type="datetime-local" asp-for="@Model.SubeventToCreate.StartDate" id="StartDate" class="newlogfield" required />
                        <br />
                        <label asp-for="@Model.SubeventToCreate.EndDate">- End Date -</label>
                        <input type="datetime-local" asp-for="@Model.SubeventToCreate.EndDate" id="EndDate" class="newlogfield" required />
                        <br />
                        <label asp-for="@Model.SubeventToCreate.RegistrationDeadline">- Registration Deadline -</label>
                        <input type="datetime-local" asp-for="@Model.SubeventToCreate.RegistrationDeadline" id="RegistrationDeadline" class="newlogfield" />
                        <br />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="@Model.SubeventToCreate.Capacity">- Capacity -</label>
                        <input type="text" asp-for="@Model.SubeventToCreate.Capacity" id="Capacity" class="newlogfield" />
                        <br />
                        <label asp-for="@Model.SubeventToCreate.EventType">-  Event Type -</label>
                        <input type="text" asp-for="@Model.SubeventToCreate.EventType" id="EventType" class="newlogfield" />
                        <br />
                        <label asp-for="@Model.SpaceToCreate.Name">- Location Name -</label>
                        <input type="text" asp-for="@Model.SpaceToCreate.Name" id="SpaceName" class="newlogfield" />
                        <br />
                        <label asp-for="@Model.SpaceToCreate.Address">- Location Address -</label>
                        <input type="text" asp-for="@Model.SpaceToCreate.Address" id="SpaceAddress" class="newlogfield" />
                        <br />
                        <label asp-for="@Model.SpaceToCreate.Capacity">- Location Capacity -</label>
                        <input type="text" asp-for="@Model.SpaceToCreate.Capacity" id="SpaceCapacity" class="newlogfield" />
                    </div>
                </div>
                <br />
                <div class="d-flex justify-content-center">
                    <button type="button" onclick="populateForm()" class="btn rndbtn2 btn-dark">Populate</button>
                    <button type="button" class="btn rndbtn2 btn-dark" onclick="clearForm()">Clear</button>
                    <input value="Create" type="submit" class="btn rndbtn2 btn-dark" id="textfield" asp-page="Organizer/Index" />
                    <a asp-page="/Organizer/EditEvent" asp-route-eventid="@Model.RouteID" class="btn rndbtn2 btn-dark" id="textfield">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // links to the Populate button, which populates all fields but DOES NOT send a post request
    function populateForm() {
        document.getElementById("EventName").value = "Test Event";
        document.getElementById("EventDescription").value = "Test Event Description";
        // Format dates according to datetime-local format (YYYY-MM-DDThh:mm)
        document.getElementById("StartDate").value = "2023-12-20T00:00";
        document.getElementById("EndDate").value = "2023-12-25T00:00";
        document.getElementById("RegistrationDeadline").value = "2023-12-19T00:00";
        document.getElementById("Capacity").value = "50";
        document.getElementById("EventType").value = "Dinner";
        document.getElementById("SpaceName").value = "Test Space";
        document.getElementById("SpaceAddress").value = "123 Test Space Lane";
        document.getElementById("SpaceCapacity").value = "400";
    }

    function clearForm() {
        document.getElementById("EventName").value = "";
        document.getElementById("EventDescription").value = "";
        document.getElementById("StartDate").value = "";
        document.getElementById("EndDate").value = "";
        document.getElementById("RegistrationDeadline").value = "";
        document.getElementById("Capacity").value = "";
        document.getElementById("EventType").value = "";
        document.getElementById("SpaceName").value = "";
        document.getElementById("SpaceAddress").value = "";
        document.getElementById("SpaceCapacity").value = "";
    }
</script>