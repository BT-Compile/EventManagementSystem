@page "{EventID}"
@model EventManagementSystem.Pages.EventSchedule.ScheduleModel
@{
}

<h2>@Model.EventName Schedule</h2>

<table class="table table-bordered table-responsive table-hover">
    <thead>
        <tr>
            <th>Activity Name:</th>
            <th>Description:</th>
            <th>Date and Time:</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var activity in Model.Activities)
            {
                <tr>
                    <td>@activity.ActivityName</td>
                    <td>@activity.ActivityDescription</td>
                    <td>@activity.DateAndTime</td>
                </tr>
            }
        }
    </tbody>
</table>

<a asp-page="Index" class="btn btn-secondary">Back</a>
