@page
@model EventManagementSystem.Pages.Login.IndexModel
@{
    ViewData["Title"] = "Log in";
}

<div class="wrapper"> 
    <br />
    <div class="logbox">
        <h2 class="purpletxt logtxt font centertxt">Please Log In Below:</h2>
        <br />
        <form asp-page="Index">
            <input asp-for="Username" placeholder="Username" class="form-control" required id="textfield"/>
            <br />
            <input asp-for="Password" placeholder="Password" class="form-control" type="password" required id="textfield" />
            <br />
            <input type="submit" class="btn widebutton-flex btn-dark" value="Login"/>
            <br />
        </form>
        <br />
        @{
            if (HttpContext.Session.GetString("username") == null)
            {
                <p class="text-danger centertxt">@ViewData["LoginMessage"]</p>
            }
        }
        <p class="purpletxt centertxt">Don't have an account? <a asp-page="NewUser"><b>Register here</b></a></p>
    </div>
</div>

