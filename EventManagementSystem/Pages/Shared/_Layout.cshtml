<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lab4</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EventManagementSystem.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3" data-bs-theme="light">
            <div class="container">
                <a class="navbar-brand" >Lab4</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            // case that no user is logged in
                            if (Context.Session.GetString("usertype") == null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                                </li>
                            }
                            // case that an Attendee is currently logged in
                            else if (Context.Session.GetString("usertype").Equals("Attendee"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Attendee/Index">Home</a>
                                </li>
                            }
                            // case that an Admin is currently logged in
                            else if (Context.Session.GetString("usertype").Equals("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Index">Home</a>
                                </li>
                            }
                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Event Information
                            </a>
                            <ul class="dropdown-menu">
                                @{
                                    // case that no user or a normal user is logged in
                                    if (Context.Session.GetString("usertype") == null || Context.Session.GetString("usertype").Equals("Attendee"))
                                    {
                                        <li><a class="dropdown-item" href="/Events/Index">Events</a></li>
                                        <li><a class="dropdown-item" href="/Activities/Index">Activities</a></li>
                                        <li><a class="dropdown-item" href="/Rooms/Index">Rooms</a></li>
                                    }
                                    // case that an Admin is currently logged in
                                    else if (Context.Session.GetString("usertype").Equals("Admin"))
                                    {
                                        <li><a class="dropdown-item" href="/Events/AdminEvent">Events</a></li>
                                        <li><a class="dropdown-item" href="/Activities/AdminActivity">Activities</a></li>
                                        <li><a class="dropdown-item" href="/Rooms/AdminRoom">Rooms</a></li>
                                    }

                                    // case that no user or a normal user is logged in
                                    if (Context.Session.GetString("usertype") == null)
                                    {
                                        <li><a class="dropdown-item" href="/Login/Index">Sign Up for Activities</a></li>
                                    }
                                    // case that an Admin is currently logged in
                                    else if (Context.Session.GetString("usertype").Equals("Attendee") || Context.Session.GetString("usertype").Equals("Admin"))
                                    {
                                        <li><a class="dropdown-item" href="/Attendee/AttendeeSignUp/Index">Sign Up for Activities</a></li>
                                    }
                                }
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/EventSchedule/Index">Event Schedule</a>
                        </li>
                    </ul>
                </div>
            </div>
            <form class="container-fluid justify-content-end">
                @{
                    // case that no user is logged in
                    if (Context.Session.GetString("username") != null)
                    {
                        <a class="btn btn-outline-secondary justify-content-end" asp-page="/Login/LogOut">Log out</a>
                    }
                    // case that any User is currently logged in
                    else
                    {
                        <a class="btn btn-outline-secondary justify-content-end" asp-page="/Login/Index">Log in</a>
                    }
                }    
                
            </form>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Lab4 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>