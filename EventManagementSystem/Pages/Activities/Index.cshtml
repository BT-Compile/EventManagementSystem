@page
@model EventManagementSystem.Pages.Activities.IndexModel
@{
}

<h2>All Activities</h2>
<br />
<a asp-page="SearchActivities" class="btn btn-secondary">Search Activities</a>
<br />
<br />
<div class="shdwbox">
    <div class="table-responsive card">
        <table class="table table-responsive table-hover">
            <thead>
                <tr>
                    <th>Activity Name:</th>
                    <th>Activity Description:</th>
                    <th>Date:</th>
                    <th>Start Time:</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var activity in Model.Activities)
                    {
                        <tr>
                            <td>@activity.ActivityName</td>
                            <td>@activity.ActivityDescription</td>
                            <td>@activity.Date</td>
                            <td>@activity.StartTime</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
