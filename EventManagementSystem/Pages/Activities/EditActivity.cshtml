@page "{ActivityID}"
@model EventManagementSystem.Pages.Activities.EditActivityModel
@{
    ViewData["Title"] = "Edit Activity";
}

<div class="wrapper">
    <br />
    <h2 class="font centertxt">Edit Activity Data</h2>
    <br />
    <hr />
    <br />
    <p class="notetxt">NOTE: The "EventName" field must be left blank if no Event Name change is desired. Otherwise, select an EventName from the dropdown.</p>
    <p class="notetxt">NOTE: The "RoomNumber" field must be left blank if no Room Number change is desired. Otherwise, select a Room Number from the dropdown.</p>
    <br />
    <div class="newlogbox">
        <form asp-page="EditActivity">
            <input type="hidden" asp-for="@Model.ActivityToUpdate.ActivityID" />
            <label asp-for="@Model.ActivityToUpdate.ActivityName">- Activity Name -</label>
            <br />
            <input type="text" class="newlogfield" asp-for="@Model.ActivityToUpdate.ActivityName" required />  
            <br />
            <label asp-for="@Model.ActivityToUpdate.ActivityDescription">- Description -</label>
            <br />
            <input type="text" class="newlogfield" asp-for="@Model.ActivityToUpdate.ActivityDescription" />
            <br />
            <label asp-for="@Model.ActivityToUpdate.Date">- Date -</label>
            <br />
            <input type="datetime-local" class="newlogfield" asp-for="@Model.ActivityToUpdate.Date" required />
            <br />
            <label asp-for="@Model.ActivityToUpdate.StartTime">- Start Time -</label>
            <br />
            <input type="text" class="newlogfield" asp-for="@Model.ActivityToUpdate.StartTime" required />
            <br />
            <label asp-for="@Model.ActivityToUpdate.EndTime">- End Time -</label>
            <br />
            <input type="text" class="newlogfield" asp-for="@Model.ActivityToUpdate.EndTime" required />
            <br />
            <label asp-for="@Model.ActivityToUpdate.Type">- Event Type -</label>
            <br />
            <input type="text" class="newlogfield" asp-for="@Model.ActivityToUpdate.Type" required />
            <br />
            <label asp-for="@Model.ActivityToUpdate.EventName">- Event Name -</label>
            <br />
            <select asp-for="@Model.ActivityToUpdate.EventName" class="newlogfield" asp-items="Model.Events">
                <option value=""></option>
            </select>
            <br />
            <label asp-for="@Model.ActivityToUpdate.RoomNumber">- Room Number -</label>
            <br />
            <select asp-for="@Model.ActivityToUpdate.RoomNumber" class="newlogfield" asp-items="Model.Rooms">
                <option value=""></option>
            </select>
            <br />
            <label asp-for="@Model.ActivityToUpdate.Status">- Status -</label>
            <br />
            <input type="text" class="newlogfield" asp-for="@Model.ActivityToUpdate.Status" required />
            <br />
            <input type="submit" value="Submit" class="btn rndbtn btn-light" asp-page="EditActivity" />
            <a asp-page="AdminActivity" class="btn rndbtn btn-light">Cancel</a>
        </form>
    </div>
</div>