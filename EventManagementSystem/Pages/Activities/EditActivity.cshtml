@page "{ActivityID}"
@model EventManagementSystem.Pages.Activities.EditActivityModel
@{
    ViewData["Title"] = "Edit Activity";
}

<form asp-page="EditActivity">
    <input type="hidden" asp-for="@Model.ActivityToUpdate.ActivityID" />
    <label asp-for="@Model.ActivityToUpdate.ActivityName"></label>
    <input type="text" asp-for="@Model.ActivityToUpdate.ActivityName" required />
    <br />
    <label asp-for="@Model.ActivityToUpdate.ActivityDescription"></label>
    <input type="text" asp-for="@Model.ActivityToUpdate.ActivityDescription" />
    <br />
    <label asp-for="@Model.ActivityToUpdate.Date"></label>
    <input type="datetime-local" asp-for="@Model.ActivityToUpdate.Date" required />
    <br />
    <label asp-for="@Model.ActivityToUpdate.StartTime"></label>
    <input type="text" asp-for="@Model.ActivityToUpdate.StartTime" required />
    <br />
    <label asp-for="@Model.ActivityToUpdate.EndTime"></label>
    <input type="text" asp-for="@Model.ActivityToUpdate.EndTime" required />
    <br />
    <label asp-for="@Model.ActivityToUpdate.Type"></label>
    <input type="text" asp-for="@Model.ActivityToUpdate.Type" required />
    <br />
    <label asp-for="@Model.ActivityToUpdate.Status"></label>
    <input type="text" asp-for="@Model.ActivityToUpdate.Status" required />
    <br />
    <label asp-for="@Model.ActivityToUpdate.EventID"></label>
    <input type="text" asp-for="@Model.ActivityToUpdate.EventID" />
    <br /><br />
    <input type="submit" class="btn btn-success" asp-page="EditActivity" />
    <a asp-page="AdminActivity" class="btn btn-secondary">Cancel</a>
</form>
