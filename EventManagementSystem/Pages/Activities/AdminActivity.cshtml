@page
@model EventManagementSystem.Pages.Activities.AdminActivityModel
@{
}

<div class="wrapper">
    <br />
    <h2 class="font">All Activities</h2>
    <table class="table table-responsive table-hover">
        <thead>
            <tr>
                <th>Activity Name:</th>
                <th>Activity Description:</th>
                <th>Date:</th>
                <th>Start Time:</th>
                <th>End Time:</th>
                <th>Type:</th>
                <th>Event Name:</th>
                <th>Building Name:</th>
                <th>Room Number:</th>
                <th>Status:</th>
                <th>Edit Data:</th>
                <th>Assign Room:</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var activity in Model.Activities)
                {
                    <tr class="table-secondary">
                        <td>@activity.ActivityName</td>
                        <td>@activity.ActivityDescription</td>
                        <td>@activity.Date</td>
                        <td>@activity.StartTime</td>
                        <td>@activity.EndTime</td>
                        <td>@activity.Type</td>
                        <td>@activity.EventName</td>
                        <td>@activity.BuildingName</td>
                        <td>@activity.RoomNumber</td>
                        <td>@activity.Status</td>
                        <td>
                            <a asp-page="EditActivity" class="btn rndbtn btn-light" asp-route-activityid="@activity.ActivityID">Edit</a>
                        </td>
                        <td>
                            <a asp-page="AssignRoom" class="btn rndbtn btn-light" asp-route-activityid="@activity.ActivityID">Assign</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <a asp-page="NewActivity" class="btn rndbtn btn-dark">Create New Activity</a>
</div>