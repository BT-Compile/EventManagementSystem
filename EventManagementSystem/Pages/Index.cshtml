@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome";
}

<div class="indexwrapper">
    <div class="indexContainer">
        <img src="./images/ITguy.png" alt="ITguy" class="ITguy" />
        <div class="indexBox">
            <h2>A premiere event management system</h2>
            <p>A centralized system to host events, book rooms, manage registration, and more</p>
        </div>
    </div>
    <div class="indexContainer2">
        <h2 class="centertxt font">Public Events</h2>
        <hr />
        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="./images/example1.jpg" class="carimg d-block" alt="example1">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Test Event</h3>
                        <p>Test Date | Test Location</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="./images/example2.jpg" class="carimg d-block" alt="example2">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Test Event</h3>
                        <p>Test Date | Test Location</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="./images/example3.jpg" class="carimg d-block" alt="example3">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Test Event</h3>
                        <p>Test Date | Test Location</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>
